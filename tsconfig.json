{
    "compilerOptions": {
        "baseUrl": "./",

        "skipLibCheck": true,
        "strict": true,

        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,

        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2015",

        "forceConsistentCasingInFileNames": true
    },

    "include": ["src/*"],

    "exclude": ["node_modules", "**/*.spec.ts"]
}
